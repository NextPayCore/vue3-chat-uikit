{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "skipLibCheck": true,
    "resolveJsonModule": false
  },
  "include": ["src/index.ts", "src/components/**/*", "src/interfaces/**/*", "src/enums/**/*"],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/App.vue",
    "src/main.ts"
  ]
}
